lst = [1,2,3,4,5,6,7,8]
for i in range(0,9):
  for j in range(0,i):
    if j == 0:
      print((j+1)*lst[0], end=' ')
      lst[0]+=1
    elif j == 1:
      print((j+1)*lst[1], end=' ')
      lst[1]+=1
    elif j == 2:
      print((j+1)*lst[2], end=' ')
      lst[2]+=1
    elif j == 3:
      print((j+1)*lst[3], end=' ')
      lst[3]+=1
    elif j == 4:
      print((j+1)*lst[4], end=' ')
      lst[4]+=1
    elif j == 5:
      print((j+1)*lst[5], end=' ')
      lst[5]+=1
    elif j == 6:
      print((j+1)*lst[6], end=' ')
      lst[6]+=1
    elif j == 7:
      print((j+1)*lst[7], end=' ')
      lst[7]+=1
    elif j == 8:
      print((j+1)*lst[8], end=' ')
      lst[8]+=1
  print('')
