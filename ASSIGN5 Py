In [ ]:
for i in range(1,6):
  for j in range(1,6):
    if i == 5 or j == 5:
      print('5', end=' ')
    elif i == 4 or j == 4:
      print('4', end=' ')
    elif i == 3 or j == 3:
      print('3', end=' ')
    elif i == 2 or j == 2:
      print('2', end=' ')
    elif i == 1 or j == 1:
      print('1', end=' ')
    else:
      print(' ', end=' ')
    
    
  print(' ')
