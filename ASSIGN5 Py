row=int(input())

for i in range(0,2*row):
    for j in range(0,2*row):
      if i == 0:
        print("*", end="")

print()
x=1

for r in range(row-1,0,-1):
    for c in range(1,r+1):
        print("*",end="")
    # space between triangles    
    for s in range(0,x*2):
        print("_",end="")
    for c in range(c,0,-1):
        print("*",end="")
    x=x+1
    print()
