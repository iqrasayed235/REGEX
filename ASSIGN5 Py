In [ ]:
k=1
for i in range(1,5):
  if i % 2 == 0:
    for j in range(1,i+1):
      print(k,end=' ')
      k-=1
    print(' ')
    k+=i+1
  else:
    for j in range(1,i+1):
      print(k,end=' ')
      k+=1
    print(' ')
    k+=i
